<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoldPizza.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nazwa:" FontSize="Medium" />
        <Label Text="{Binding Pizzeria.Nazwa}" FontSize="Small"/>
        <Label Text="Ocena:" FontSize="Medium" />
        <Label Text="{Binding Pizzeria.Ocena}" FontSize="Small"/>
        <Label Text="Opis:" FontSize="Medium" />
        <Label Text="{Binding Pizzeria.Opis}" FontSize="Small"/>
    </StackLayout>
</ContentPage>